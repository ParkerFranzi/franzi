<div class="span12">

  <% if can? :edit, @post %>
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-small btn-primary' %>
  <% end %>
  <% if can? :destroy, @post %>
    <%= link_to "Delete Post", [@post], method: :delete, class: 'btn btn-small pull-right btn-danger', confirm: 'Are you sure you want to delete this post?' %>
  <% end %>   

  <h1><%= @post.title %></h1>
  <p><%= markdown auto_link(@post.body) %></p>
  <p><%= image_tag(@post.image_url) if @post.image? %></p>
  <br>
  <h2><%= @post.comments.count %> Comments</h2>

  

  <%= render @comments %>


  <% if can? :create, Comment %>
    <hr/>
    <h4>New Comment</h4>
    <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
  <% end %>
</div>