<div class="span12">

  <% if can? :edit, @post %>
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-small btn-success pull-right' %>
  <% end %>
  <%# if can? :destroy, @post %>
    <%#= link_to "Delete Wiki", [@post], method: :delete, class: 'btn btn-small btn-danger pull-right', confirm: 'Are you sure you want to delete this Wiki' %>
  <%# end %>

  <h1><%= markdown @post.title %></h1>
  <p><%= markdown @post.body %></p>

  <h2><%= @comments.count %> Comments</h2>

  <%= render @comments %>

  <% if can? :create, Comment %>
    <hr/>
    <h4>New Comment</h4>
    <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
  <% end %>
</div>