<h1>Edit Gallery</h1>
  
<% if can? :destroy, @gallery %>
  <%= link_to "Delete Gallery", [@gallery], method: :delete, class: 'btn btn-small pull-right btn-danger', confirm: 'Are you sure you want to delete this gallery?' %>
<% end %>   

<div class="row">
  <div class="span12">
    <%= render partial: 'form', locals: { gallery: @gallery } %>
  </div>
</div>

<p><h4>Click on a picture to delete if from the gallery</h4></p>

<% @gallery.pictures.each do |picture| %>
  <%= link_to image_tag(picture.image_url(:thumb)), [@gallery, picture], method: :delete, confirm: 'Are you sure you want to delete this picture?' %>
<% end %>