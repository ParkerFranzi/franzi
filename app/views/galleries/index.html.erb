<h1>All Galleries</h1>

<% if can? :create, Gallery %>
  <%= link_to "New Gallery", new_gallery_path, class: 'btn btn-primary btn-mini' %>
<% end %>
<%= will_paginate @galleries %>

<% @galleries.each do |gallery| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to gallery.title, gallery %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(gallery.created_at) %> ago by <%= gallery.user.name %><br/>
      </small>
    </div>
  </div>
<% end %>
<%= will_paginate @galleries %>