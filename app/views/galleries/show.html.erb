<div class="span12">

  <% if can? :edit, @gallery %>
    <%= link_to "Edit", edit_gallery_path(@gallery), class: 'btn btn-small btn-success' %>
  <% end %>
  <% if can? :destroy, @gallery %>
    <%= link_to "Delete Gallery", [@gallery], method: :delete, class: 'btn btn-small pull-right btn-danger', confirm: 'Are you sure you want to delete this gallery?' %>
  <% end %>   

  <h1><%= markdown @gallery.title %></h1>
  <p><%= markdown @gallery.description %><p>

  <p><%= image_tag(@picture.image_url) if @picture.image? %></p>

  <% if can? :create, Picture %>
    <%= link_to "New Picture", new_gallery_picture_path(@gallery), class: 'btn btn-small btn-success' %>
    
  <% end %>
  <%# @pictures.each do |picture| %>
</div>