<div class="row">
  <div class="span12">
    <b>User List</b>
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Update Role</th>
          <th>Delete User</th>
        </tr>
      <% @users.each do |user| %>
        <%# if @users.any? %>
        <% if user.email != current_user.email %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= best_in_place user, :role, :type => :select, :collection => [["guest", "guest"], ["member", "member"], ["admin", "admin"]] %></td>
            <td><%= link_to "delete", destroy_user_path(user), method: :delete, confirm: 'Are you sure you want to delete this user?' %>
          <%#= label_tag :user_ids, user.email %>
          </tr>
      </table>
        <% end %>
      <% end %>

  </div>
</div>